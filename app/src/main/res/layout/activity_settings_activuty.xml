<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".activities.SettingsActivity">


    <TextView
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter server base url in the below input field in the format (http://example.com/)" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editTextLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Server base URL"
        android:inputType="textWebEditText" />

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textViewUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current URL: " />

    <Button
        android:onClick="saveServerUrl"
        android:layout_marginTop="10dp"
        android:text="save server address"
        android:theme="@style/ThemeOverlay.MyButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>